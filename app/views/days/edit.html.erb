<h1>Editing Day</h1>

<%= form_for :day, url: day_path(@day), method: :patch do |f| %>

<% if @day.errors.any? %>
    <div id="error_explanation">
        <h2>
            <%= pluralize(@day.errors.count, "error") %>
            prohibited this day from being saved:
        </h2>
        <ul>
            <% @day.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
    
    <p>
        <%= f.label :date %>
        <br>
        <%= f.text_field :date %>
    </p>
    <p>
        <%= f.submit %>
    </p>
    
    <% end %>
    
    <%= link_to 'Back', days_path %>